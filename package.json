{
  "name": "unknowspace",
  "version": "0.0.1",
  "description": "The space game online",
  "main": "index.js",
  "scripts": {
    "postinstall": "subpkg install",
    "start": "concurrently -n client,server -c blue,green \"npm run client:start\" \"npm run server:start\"",
    "build": "concurrently -n client,server -c blue,green \"npm run client:build\" \"npm run server:build\"",
    "client": "cd packages/client && npm run start:dev-server",
    "client:start": "cd packages/client && npm start",
    "client:build": "cd packages/client && npm build",
    "server:start": "cd packages/server && npm start",
    "server:build": "cd packages/server && npm build"
  },
  "keywords": [
    "game",
    "space",
    "planet",
    "multi",
    "multiplayer",
    "online"
  ],
  "author": "Daniel Payet Thomas Lemaire",
  "license": "ISC",
  "subPackages": [
    "packages/client",
    "packages/server"
  ],
  "devDependencies": {
    "concurrently": "^4.1.0",
    "subpackage": "^1.1.0"
  }
}
