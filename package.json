{
  "name": "unknowspace",
  "version": "0.0.1",
  "description": "The space game online",
  "main": "index.js",
  "scripts": {
    "postinstall": "subpkg install",
    "start": "concurrently -n client,server -c blue,green \"npm run client:start\" \"npm run server:start\"",
    "build": "concurrently -n client,server -c blue,green \"npm run client:build\" \"npm run server:build\"",
    "client": "cd packages/client && npm run start:dev-server",
    "client:start": "cd packages/client && npm start",
    "client:build": "cd packages/client && npm run build",
    "server:start": "cd packages/server && npm start",
    "server:build": "cd packages/server && npm run build",
    "test": "npm run server:test && npm run client:test",
    "server:test": "tslint -c tslint.json 'packages/server/src/**/*.ts'",
    "client:test": "tslint -c tslint.json 'packages/client/src/**/*.ts'"
  },
  "keywords": [
    "game",
    "space",
    "planet",
    "multi",
    "multiplayer",
    "online"
  ],
  "author": "Daniel Payet - Thomas Lemaire",
  "license": "ISC",
  "subPackages": [
    "packages/client",
    "packages/server"
  ],
  "devDependencies": {
    "concurrently": "^4.1.0",
    "subpackage": "^1.1.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  },
  "dependencies": {
    "npm": "^6.10.3"    
  }
}
